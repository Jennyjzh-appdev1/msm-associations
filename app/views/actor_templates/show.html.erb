<h1>
  Actor #<%= @actor.id %> details
</h1>

<a href="/actors/<%= @actor.id %>/edit">
  Edit actor
</a>

<hr>

<dl>
  <dt>
    Dob
  </dt>
  <dd>
    <%= @actor.dob %>
  </dd>

  <dt>
    Name
  </dt>
  <dd>
    <%= @actor.name %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @actor.bio %>
  </dd>

  <dt>
    Image url
  </dt>
  <dd>
    <img src="<%= @actor.image_url %>" width="320">
  </dd>
  
   <dt>
    Number of characters
  </dt>
  <dd>
   <%= Character.where(actor_id: @actor.id).count %>
  </dd>

</dl>

<div class="card" style="width: 50rem;">
  <div class="card-header">
    Filmography
  </div>
  <ul class="list-group list-group-flush">
    populate later
  </ul>
  
  <div class="card-header">
    Add a new character for this actor
  </div>
  <ul class="list-group">
    <li class="list-group-item">
      <form action="/create_movie" >
        <!-- Label and input for title -->
        <div class="form-group">
          <label for="name">
            Name
          </label>
      
          <input type="text" id="name" name="name" class="form-control">
        </div>
      
        <!-- Label and input for year -->
        <div class="form-group">
          <label for="movie">
            Movie
          </label>
      
          <%= select_tag("movie_id", options_from_collection_for_select(Movie.all, :id, :title, @character.try(:movie_id)), :class => "form-control") %>

        </div>
      
        
        <button class="btn btn-block btn-outline-secondary">
          Create character
        </button>
      </form>
    </li>
  </ul>

  </ul>
</div>


<a href="/delete_actor/<%= @actor.id %>" class="btn btn-danger">
  Delete actor
</a>

<hr>

<a href="/actors">
  Go back
</a>
